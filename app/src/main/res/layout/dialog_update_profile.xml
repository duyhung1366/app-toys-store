<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_dialog_reset_password"
            android:text="Sửa thông tin"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_layout_border_bottom_white"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/edtNameEdit"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_editext_login"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="15dp"
                android:hint="Tên"
                android:textSize="18sp"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtEmailEdit"
                android:background="@drawable/custom_editext_login"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="15dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtPhoneEdit"
                android:background="@drawable/custom_editext_login"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="15dp"
                android:hint="Số điện thoại"
                android:inputType="phone"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/black" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/edtPassEdit"
                android:background="@drawable/custom_editext_login"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="15dp"
                android:hint="Mật khẩu"
                android:inputType="text"
                android:maxLines="1"
                android:padding="15dp"
                android:textColor="@color/black" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="OK"
                    android:id="@+id/btnOKEdit"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_btn_login"
                    android:textColor="@color/white"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cancel"
                    android:id="@+id/btnCancleEidt"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_btn_login"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>