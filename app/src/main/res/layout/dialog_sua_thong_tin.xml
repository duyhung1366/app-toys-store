<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_border_white"
        android:orientation="vertical">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/baseline_check_circle_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi thông tin thành công"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.3"
            android:text="Để bảo mật thông tin\n quý khách vui lòng lựa chọn :"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Duy trì đăng nhập"
                android:textAllCaps="false"
                android:id="@+id/btnDuyTri"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_margin="10dp"
                android:background="@drawable/custom_button_teal_corner_5"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Đăng xuất"
                android:id="@+id/btnDialogDangXuat"
                android:textAllCaps="false"
                android:layout_margin="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/custom_button_teal_corner_5"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>